---
interface Props {
  cv: CV
}
import Section from '../Section.astro'
import type { CV } from '@/cv'

const { education } = Astro.props.cv
---

<Section title='EducaciÃ³n'>
  <ul>
    {
      education.map(({ title, startDate, endDate, institution }) => {
        const start = new Date(startDate).toLocaleDateString('es-ES', {
          year: 'numeric',
          month: 'short',
        })
        const end =
          endDate != null
            ? new Date(endDate).toLocaleDateString('es-ES', {
                year: 'numeric',
                month: 'short',
              })
            : 'Actual'
        const years = `${start} - ${end}`

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{title}</h3>
                </div>

                <time>{years}</time>
              </header>

              <footer>
                <p>{institution}</p>
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
